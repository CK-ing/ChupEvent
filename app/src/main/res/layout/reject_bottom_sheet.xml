<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Admin Comment Label -->
    <TextView
        android:id="@+id/tv_admin_comment_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Comment"
        android:textColor="#808080"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Admin Comment Input -->
    <EditText
        android:id="@+id/et_admin_comment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Comments are required to reject event"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:background="@drawable/rounded_edit_text_white"
        android:layout_marginBottom="16dp" />

    <!-- Approve and Reject Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Reject Button -->
        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/bright_red"
            android:text="Reject"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
