<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv_back_btn_approve_event"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:contentDescription="Back"
                android:layout_gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:text="Event Approval"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Organizer Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/iv_organizer_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_baseline_person_24"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organizer:"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_organizer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizer Name"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_organizer_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="organizer@example.com"
                    android:textColor="#0000EE"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            />

        <!-- Repeating Information Rows -->
        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title:"
            android:textColor="#808080"
            android:textSize="14sp" />
        <!-- Event Details -->
        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            />

        <!-- Repeating Information Rows -->
        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description goes here..."
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
             />

        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location goes here..."
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
             />
        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_event_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: Date\nTime: Time"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            />

        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To:"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_event_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 25/11/2024\nTime: 18:46"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
             />

        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seats:"
            android:textColor="#808080"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_event_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="8dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
             />

        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_event_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="16sp"
            android:paddingBottom="8dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
             />

        <!-- Admin Comment Label -->
        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin comment:"
            android:textColor="#808080"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Manager Comment Input -->
        <EditText
            android:id="@+id/et_admin_comment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Comments are required to reject event"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/rounded_edit_text_white"
            android:layout_marginBottom="8dp" />

        <!-- Approve and Decline Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Approve Button -->
            <Button
                android:id="@+id/btn_approve_event"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/light_green"
                android:text="Approve"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Decline Button -->
            <Button
                android:id="@+id/btn_reject_event"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/bright_red"
                android:text="Reject"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
